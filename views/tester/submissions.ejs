<% layout('layouts/boilerplate') %>

<h2>Mis Envios</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Flujo</th>
      <th>Caso de Prueba</th>
      <th>Estado</th>
      <th>Puntos</th>
      <th>Aprobacion</th>
    </tr>
  </thead>
  <tbody>
    <% submissions.forEach(sub => { %>
      <tr>
        <td><%= sub.createdAt.toLocaleDateString() %></td>
        <td><%= sub.flow ? sub.flow.name : 'N/A' %></td>
        <td><%= sub.testCase ? sub.testCase.title : 'N/A' %></td>
        <td class="status-<%= sub.status %>"><%= sub.status === 'passed' ? 'Aprobado' : 'Fallido' %></td>
        <td><%= sub.pointsEarned %><%= sub.isUsefulFeedback ? ' +1' : '' %></td>
        <td>
          <% if (sub.pointsAwarded) { %>
            <span class="badge bg-success">Aprobado</span>
          <% } else { %>
            <span class="badge bg-warning text-dark">Pendiente</span>
          <% } %>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<% if (submissions.length === 0) { %>
  <div class="alert alert-info">Aun no hay envios. Comienza un flujo de prueba!</div>
<% } %>
