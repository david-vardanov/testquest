<script>
function toggleLeaderboard() {
  const panel = document.getElementById('leaderboard-panel');
  const overlay = document.getElementById('leaderboard-overlay');
  panel.classList.toggle('active');
  overlay.classList.toggle('active');
  document.body.classList.toggle('leaderboard-open');

  // Scroll to current user in mobile panel when opened
  if (panel.classList.contains('active')) {
    setTimeout(() => scrollToCurrentUser('mobile'), 100);
  }
}

function scrollToCurrentUser(type) {
  const containerId = type === 'mobile' ? 'mobile-leaderboard' : 'desktop-leaderboard';
  const userId = type === 'mobile' ? 'mobile-current-user' : 'desktop-current-user';
  const container = document.getElementById(containerId);
  const userRow = document.getElementById(userId);

  // If user is in top 5, no need to scroll (they're in frozen section)
  if (!container || !userRow) return;

  // Get index of current user in scrollable section
  const allRows = container.querySelectorAll('tbody tr');
  let userIndex = -1;
  allRows.forEach((row, i) => {
    if (row.id === userId) userIndex = i;
  });

  if (userIndex >= 0) {
    // Estimate row height (about 35px per row)
    const rowHeight = 35;
    const targetScroll = (userIndex * rowHeight) - (container.clientHeight / 2) + (rowHeight / 2);
    container.scrollTop = Math.max(0, targetScroll);
  }
}

// Auto-scroll desktop leaderboard to current user on page load
document.addEventListener('DOMContentLoaded', function() {
  setTimeout(() => {
    scrollToCurrentUser('desktop');
  }, 300);
  // Load unread message count
  updateMessageBadge();
});

// ===== MESSAGING SYSTEM =====
let messagesLoaded = false;

function toggleMessages() {
  const panel = document.getElementById('messages-panel');
  const overlay = document.getElementById('messages-overlay');
  panel.classList.toggle('active');
  overlay.classList.toggle('active');
  document.body.classList.toggle('messages-open');

  if (panel.classList.contains('active') && !messagesLoaded) {
    loadMessages();
  }
}

async function updateMessageBadge() {
  try {
    const res = await fetch('/tester/messages/unread-count');
    const data = await res.json();
    const badge = document.getElementById('message-badge');
    const desktopBadge = document.getElementById('desktop-message-badge');

    if (data.success) {
      const countText = data.count > 99 ? '99+' : data.count;
      const show = data.count > 0;

      if (badge) {
        badge.textContent = countText;
        badge.style.display = show ? 'block' : 'none';
      }
      if (desktopBadge) {
        desktopBadge.textContent = countText;
        desktopBadge.style.display = show ? 'block' : 'none';
      }
    }
  } catch (err) {
    console.error('Error fetching unread count:', err);
  }
}

async function loadMessages() {
  const loading = document.getElementById('messages-loading');
  const empty = document.getElementById('messages-empty');
  const list = document.getElementById('messages-list');
  const replyForm = document.getElementById('messages-reply-form');

  loading.style.display = 'block';
  empty.style.display = 'none';
  list.innerHTML = '';

  try {
    const res = await fetch('/tester/messages');
    const data = await res.json();

    loading.style.display = 'none';
    messagesLoaded = true;

    if (!data.success || !data.messages || data.messages.length === 0) {
      empty.style.display = 'block';
      replyForm.style.display = 'none';
      return;
    }

    // Show reply form
    replyForm.style.display = 'block';

    // Render messages
    data.messages.forEach(msg => {
      const bubble = document.createElement('div');
      bubble.className = `message-bubble ${msg.sender}`;

      const time = new Date(msg.createdAt).toLocaleString('es', {
        day: '2-digit', month: '2-digit', hour: '2-digit', minute: '2-digit'
      });

      let caseCard = '';
      if (msg.submission && msg.submission.testCase) {
        const statusIcon = msg.submission.status === 'passed' ? '‚úÖ' : '‚ùå';
        const statusText = msg.submission.status === 'passed' ? 'Aprobado' : 'Fallido';
        const subDate = new Date(msg.submission.createdAt).toLocaleDateString('es');
        caseCard = `
          <div class="message-case-card">
            <div class="case-card-header">
              <span class="case-card-icon">üìã</span>
              <span class="case-card-title">${escapeHtml(msg.submission.testCase.title)}</span>
            </div>
            <div class="case-card-meta">
              <span>${statusIcon} ${statusText}</span>
              <span>¬∑ ${subDate}</span>
            </div>
          </div>
        `;
      }

      let screenshotHtml = '';
      if (msg.screenshot) {
        screenshotHtml = `<a href="/uploads/${msg.screenshot}" target="_blank"><img src="/uploads/${msg.screenshot}" class="message-screenshot" alt="Imagen"></a>`;
      }

      bubble.innerHTML = `
        ${caseCard}
        ${msg.content ? `<div class="message-content">${escapeHtml(msg.content)}</div>` : ''}
        ${screenshotHtml}
        <div class="message-time">${time}</div>
      `;
      list.appendChild(bubble);
    });

    // Scroll to bottom
    list.scrollTop = list.scrollHeight;

    // Mark as read
    await fetch('/tester/messages/read', { method: 'POST' });
    updateMessageBadge();

  } catch (err) {
    console.error('Error loading messages:', err);
    loading.style.display = 'none';
    empty.style.display = 'block';
  }
}

function escapeHtml(text) {
  const div = document.createElement('div');
  div.textContent = text;
  return div.innerHTML;
}

// Screenshot file handling
const screenshotInput = document.getElementById('reply-screenshot');
const screenshotPreview = document.getElementById('screenshot-preview');
const screenshotName = document.getElementById('screenshot-name');

screenshotInput?.addEventListener('change', function() {
  if (this.files && this.files[0]) {
    screenshotName.textContent = this.files[0].name;
    screenshotPreview.style.display = 'block';
  }
});

function clearScreenshot() {
  screenshotInput.value = '';
  screenshotPreview.style.display = 'none';
}

// Reply form handler
document.getElementById('reply-form')?.addEventListener('submit', async function(e) {
  e.preventDefault();
  const input = document.getElementById('reply-input');
  const content = input.value.trim();
  const file = screenshotInput?.files[0];

  if (!content && !file) return;

  try {
    const formData = new FormData();
    if (content) formData.append('content', content);
    if (file) formData.append('screenshot', file);

    const res = await fetch('/tester/messages', {
      method: 'POST',
      body: formData
    });
    const data = await res.json();

    if (data.success) {
      input.value = '';
      clearScreenshot();

      // Add message to list
      const list = document.getElementById('messages-list');
      const bubble = document.createElement('div');
      bubble.className = 'message-bubble user';
      const time = new Date().toLocaleString('es', {
        day: '2-digit', month: '2-digit', hour: '2-digit', minute: '2-digit'
      });

      let screenshotHtml = '';
      if (data.message.screenshot) {
        screenshotHtml = `<a href="/uploads/${data.message.screenshot}" target="_blank"><img src="/uploads/${data.message.screenshot}" class="message-screenshot" alt="Imagen"></a>`;
      }

      bubble.innerHTML = `
        ${content ? `<div class="message-content">${escapeHtml(content)}</div>` : ''}
        ${screenshotHtml}
        <div class="message-time">${time}</div>
      `;
      list.appendChild(bubble);
      list.scrollTop = list.scrollHeight;
    }
  } catch (err) {
    console.error('Error sending message:', err);
  }
});
</script>

