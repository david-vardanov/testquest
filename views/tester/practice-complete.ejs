<% layout('layouts/boilerplate') %>

<style>
  .completion-wrapper {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
  }

  .completion-container {
    max-width: 700px;
    width: 100%;
  }

  /* Trophy Section */
  .trophy-section {
    text-align: center;
    margin-bottom: 2rem;
  }

  .trophy-circle {
    width: 120px;
    height: 120px;
    background: linear-gradient(135deg, #ffd700 0%, #ffaa00 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    box-shadow: 0 10px 40px rgba(255, 170, 0, 0.4);
    animation: trophy-bounce 1s ease-out;
  }

  .trophy-circle span {
    font-size: 3.5rem;
  }

  @keyframes trophy-bounce {
    0% { transform: scale(0) rotate(-20deg); opacity: 0; }
    50% { transform: scale(1.2) rotate(10deg); }
    70% { transform: scale(0.9) rotate(-5deg); }
    100% { transform: scale(1) rotate(0deg); opacity: 1; }
  }

  .completion-title {
    font-size: 2.25rem;
    font-weight: 800;
    color: #1a1a2e;
    margin-bottom: 0.5rem;
  }

  .completion-subtitle {
    font-size: 1.1rem;
    color: #64748b;
  }

  /* Skills Grid */
  .skills-section {
    margin-bottom: 2rem;
  }

  .section-label {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #667eea;
    margin-bottom: 1rem;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .skill-card {
    background: white;
    border-radius: 12px;
    padding: 1.25rem;
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    border: 1px solid #e2e8f0;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .skill-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .skill-icon {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .skill-icon.green { background: #dcfce7; }
  .skill-icon.red { background: #fee2e2; }
  .skill-icon.blue { background: #dbeafe; }
  .skill-icon.purple { background: #f3e8ff; }
  .skill-icon.yellow { background: #fef9c3; }

  .skill-content h4 {
    font-size: 0.95rem;
    font-weight: 600;
    color: #1e293b;
    margin: 0 0 0.25rem 0;
  }

  .skill-content p {
    font-size: 0.8rem;
    color: #64748b;
    margin: 0;
    line-height: 1.4;
  }

  /* Points Reference */
  .points-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 16px;
    padding: 1.5rem;
    margin-bottom: 2rem;
    color: white;
  }

  .points-section .section-label {
    color: rgba(255, 255, 255, 0.8);
  }

  .points-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 0.75rem;
  }

  .point-item {
    background: rgba(255, 255, 255, 0.15);
    border-radius: 10px;
    padding: 0.875rem;
    text-align: center;
  }

  .point-value {
    font-size: 1.5rem;
    font-weight: 700;
    display: block;
  }

  .point-label {
    font-size: 0.75rem;
    opacity: 0.9;
  }

  /* Next Flow Card */
  .next-flow-section {
    margin-bottom: 2rem;
  }

  .next-flow-card {
    background: white;
    border-radius: 16px;
    padding: 1.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border: 2px solid #667eea;
    position: relative;
    overflow: hidden;
  }

  .next-flow-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .next-flow-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .next-flow-icon {
    width: 56px;
    height: 56px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.75rem;
    flex-shrink: 0;
  }

  .next-flow-info h3 {
    font-size: 1.25rem;
    font-weight: 700;
    color: #1e293b;
    margin: 0 0 0.25rem 0;
  }

  .next-flow-info p {
    font-size: 0.875rem;
    color: #64748b;
    margin: 0;
  }

  .next-flow-meta {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.25rem;
    flex-wrap: wrap;
  }

  .meta-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    background: #f1f5f9;
    padding: 0.5rem 0.875rem;
    border-radius: 8px;
    font-size: 0.8rem;
    font-weight: 600;
    color: #475569;
  }

  .meta-badge.points {
    background: #fef3c7;
    color: #92400e;
  }

  .next-flow-button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    width: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    font-size: 1.1rem;
    font-weight: 700;
    padding: 1rem 2rem;
    border-radius: 12px;
    text-decoration: none;
    box-shadow: 0 4px 20px rgba(102, 126, 234, 0.4);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .next-flow-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(102, 126, 234, 0.5);
    color: white;
  }

  .next-flow-button span {
    font-size: 1.25rem;
  }

  /* CTA Button (fallback) */
  .cta-section {
    text-align: center;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: #64748b;
    color: white;
    font-size: 1rem;
    font-weight: 600;
    padding: 0.875rem 2rem;
    border-radius: 12px;
    text-decoration: none;
    transition: background 0.2s;
  }

  .cta-button:hover {
    background: #475569;
    color: white;
  }

  /* Confetti Animation */
  .confetti {
    position: fixed;
    width: 10px;
    height: 10px;
    top: -10px;
    animation: confetti-fall 3s ease-out forwards;
    z-index: 1000;
    pointer-events: none;
  }

  @keyframes confetti-fall {
    0% { transform: translateY(0) rotate(0deg); opacity: 1; }
    100% { transform: translateY(100vh) rotate(720deg); opacity: 0; }
  }

  /* Mobile */
  @media (max-width: 767.98px) {
    .completion-title { font-size: 1.75rem; }
    .trophy-circle { width: 100px; height: 100px; }
    .trophy-circle span { font-size: 2.75rem; }
    .skills-grid { grid-template-columns: 1fr; }
    .points-grid { grid-template-columns: repeat(2, 1fr); }
    .cta-button { width: 100%; justify-content: center; }
  }
</style>

<div class="completion-wrapper">
  <div class="completion-container">
    <!-- Trophy -->
    <div class="trophy-section">
      <div class="trophy-circle">
        <span>&#127942;</span>
      </div>
      <h1 class="completion-title">Practica Completada!</h1>
      <p class="completion-subtitle">Excelente trabajo! Ya dominas lo basico de TestQuest.</p>
    </div>

    <!-- Skills Learned -->
    <div class="skills-section">
      <div class="section-label">Lo que aprendiste</div>
      <div class="skills-grid">
        <div class="skill-card">
          <div class="skill-icon green">&#9989;</div>
          <div class="skill-content">
            <h4>Listas de Verificacion</h4>
            <p>Seguir pasos y marcarlos mientras avanzas</p>
          </div>
        </div>
        <div class="skill-card">
          <div class="skill-icon red">&#128680;</div>
          <div class="skill-content">
            <h4>Reportar Errores</h4>
            <p>Marcar "Fallido" cuando algo no funciona</p>
          </div>
        </div>
        <div class="skill-card">
          <div class="skill-icon blue">&#128172;</div>
          <div class="skill-content">
            <h4>Comentarios</h4>
            <p>Describir lo que observaste claramente</p>
          </div>
        </div>
        <div class="skill-card">
          <div class="skill-icon purple">&#128247;</div>
          <div class="skill-content">
            <h4>Capturas</h4>
            <p>Subir evidencia visual de los resultados</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Points Reference -->
    <div class="points-section">
      <div class="section-label">Sistema de Puntos</div>
      <div class="points-grid">
        <div class="point-item">
          <span class="point-value">&#9733;</span>
          <span class="point-label">Base por dificultad</span>
        </div>
        <div class="point-item">
          <span class="point-value">+3</span>
          <span class="point-label">Error encontrado</span>
        </div>
        <div class="point-item">
          <span class="point-value">+1</span>
          <span class="point-label">Comentarios</span>
        </div>
        <div class="point-item">
          <span class="point-value">+1</span>
          <span class="point-label">Captura</span>
        </div>
        <div class="point-item">
          <span class="point-value">+1</span>
          <span class="point-label">Bonus admin</span>
        </div>
        <div class="point-item">
          <span class="point-value">&#127881;</span>
          <span class="point-label">Bonus por flujo</span>
        </div>
      </div>
    </div>

    <!-- Next Flow CTA -->
    <% if (nextFlow) { %>
    <div class="next-flow-section">
      <div class="section-label">Tu Siguiente Mision</div>
      <div class="next-flow-card">
        <div class="next-flow-header">
          <div class="next-flow-icon">&#127919;</div>
          <div class="next-flow-info">
            <h3><%= nextFlow.name %></h3>
            <p><%= nextFlow.description || 'Completa este flujo para ganar puntos' %></p>
          </div>
        </div>
        <div class="next-flow-meta">
          <div class="meta-badge">
            &#128203; <%= nextFlow.testCases ? nextFlow.testCases.length : '?' %> pruebas
          </div>
          <div class="meta-badge points">
            &#9733; <%= nextFlow.points || 0 %> pts
          </div>
          <% if (nextFlow.completionBonus) { %>
          <div class="meta-badge points">
            &#127881; +<%= nextFlow.completionBonus %> bonus
          </div>
          <% } %>
        </div>
        <a href="/tester/flow/<%= nextFlow._id %>" class="next-flow-button">
          Comenzar Flujo
          <span>&#8594;</span>
        </a>
      </div>
    </div>
    <% } %>

    <!-- Fallback CTA -->
    <div class="cta-section">
      <a href="/tester" class="cta-button">
        <% if (nextFlow) { %>
        Ver Todos los Flujos
        <% } else { %>
        Ir al Panel de Control
        <% } %>
      </a>
    </div>
  </div>
</div>

<script>
  // Confetti effect on load
  (function() {
    const colors = ['#667eea', '#764ba2', '#ffd700', '#ff6b6b', '#4ecdc4', '#45b7d1'];
    const confettiCount = 50;

    for (let i = 0; i < confettiCount; i++) {
      setTimeout(() => {
        const confetti = document.createElement('div');
        confetti.className = 'confetti';
        confetti.style.left = Math.random() * 100 + 'vw';
        confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
        confetti.style.borderRadius = Math.random() > 0.5 ? '50%' : '0';
        confetti.style.animationDuration = (2 + Math.random() * 2) + 's';
        document.body.appendChild(confetti);

        setTimeout(() => confetti.remove(), 4000);
      }, i * 50);
    }
  })();
</script>
