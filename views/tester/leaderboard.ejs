<% layout('layouts/boilerplate') %>

<%
  const currentUserRank = users.findIndex(u => u._id.toString() === currentUser._id.toString()) + 1;
  const top3 = users.slice(0, 3);
  const rest = users.slice(3);

  function getReward(pos) {
    if (!rewards) return null;
    return rewards.find(r => pos >= r.positionFrom && pos <= r.positionTo);
  }
%>

<style>
  .leaderboard-page {
    max-width: 800px;
    margin: 0 auto;
  }

  /* Header */
  .leaderboard-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .leaderboard-title {
    font-size: 2rem;
    font-weight: 800;
    color: #1e293b;
    margin: 0 0 0.5rem 0;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
  }

  .leaderboard-title span {
    font-size: 1.75rem;
  }

  /* Your Rank Card */
  .your-rank-card {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 16px;
    padding: 1.5rem;
    color: white;
    margin-bottom: 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    box-shadow: 0 8px 30px rgba(102, 126, 234, 0.3);
  }

  .your-rank-info h3 {
    font-size: 0.875rem;
    font-weight: 600;
    opacity: 0.9;
    margin: 0 0 0.25rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .your-rank-info .rank-value {
    font-size: 2.5rem;
    font-weight: 800;
    line-height: 1;
  }

  .your-rank-stats {
    display: flex;
    gap: 1.5rem;
  }

  .rank-stat {
    text-align: center;
  }

  .rank-stat .value {
    font-size: 1.5rem;
    font-weight: 700;
  }

  .rank-stat .label {
    font-size: 0.7rem;
    opacity: 0.8;
    text-transform: uppercase;
  }

  /* Podium */
  .podium-section {
    margin-bottom: 2rem;
  }

  .podium {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    gap: 1rem;
    padding: 1rem 0;
  }

  .podium-item {
    text-align: center;
    flex: 1;
    max-width: 160px;
  }

  .podium-avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 auto 0.75rem;
    color: white;
  }

  .podium-item.first .podium-avatar {
    width: 80px;
    height: 80px;
    font-size: 2rem;
    background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
    box-shadow: 0 8px 25px rgba(251, 191, 36, 0.4);
  }

  .podium-item.second .podium-avatar {
    background: linear-gradient(135deg, #94a3b8 0%, #64748b 100%);
    box-shadow: 0 6px 20px rgba(100, 116, 139, 0.3);
  }

  .podium-item.third .podium-avatar {
    background: linear-gradient(135deg, #d97706 0%, #b45309 100%);
    box-shadow: 0 6px 20px rgba(180, 83, 9, 0.3);
  }

  .podium-name {
    font-size: 0.9rem;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 0.25rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .podium-points {
    font-size: 0.8rem;
    color: #64748b;
    margin-bottom: 0.5rem;
  }

  .podium-stand {
    border-radius: 8px 8px 0 0;
    padding: 0.75rem;
    color: white;
    font-size: 1.5rem;
    font-weight: 800;
  }

  .podium-item.first .podium-stand {
    background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
    height: 80px;
  }

  .podium-item.second .podium-stand {
    background: linear-gradient(135deg, #94a3b8 0%, #64748b 100%);
    height: 60px;
  }

  .podium-item.third .podium-stand {
    background: linear-gradient(135deg, #d97706 0%, #b45309 100%);
    height: 45px;
  }

  .podium-reward {
    font-size: 0.65rem;
    background: rgba(255,255,255,0.3);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    margin-top: 0.5rem;
    display: inline-block;
  }

  .you-badge {
    background: #667eea;
    color: white;
    font-size: 0.6rem;
    padding: 0.15rem 0.4rem;
    border-radius: 4px;
    margin-left: 0.25rem;
    vertical-align: middle;
  }

  /* Rankings List */
  .rankings-section {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  }

  .rankings-header {
    background: #f8fafc;
    padding: 1rem 1.25rem;
    font-size: 0.75rem;
    font-weight: 700;
    color: #64748b;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    display: grid;
    grid-template-columns: 60px 1fr 80px 120px;
    gap: 1rem;
    border-bottom: 1px solid #e2e8f0;
  }

  .ranking-item {
    display: grid;
    grid-template-columns: 60px 1fr 80px 120px;
    gap: 1rem;
    padding: 1rem 1.25rem;
    align-items: center;
    border-bottom: 1px solid #f1f5f9;
    transition: background 0.2s;
  }

  .ranking-item:last-child {
    border-bottom: none;
  }

  .ranking-item:hover {
    background: #f8fafc;
  }

  .ranking-item.is-you {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  }

  .ranking-position {
    font-size: 1.1rem;
    font-weight: 700;
    color: #64748b;
  }

  .ranking-user {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .ranking-avatar {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: #e2e8f0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.9rem;
    font-weight: 600;
    color: #64748b;
  }

  .ranking-name {
    font-weight: 600;
    color: #1e293b;
  }

  .ranking-points {
    font-weight: 700;
    color: #1e293b;
  }

  .ranking-reward {
    font-size: 0.75rem;
  }

  .reward-badge {
    background: #dcfce7;
    color: #16a34a;
    padding: 0.375rem 0.625rem;
    border-radius: 6px;
    font-weight: 600;
    font-size: 0.7rem;
  }

  .no-reward {
    color: #94a3b8;
  }

  /* Back Button */
  .back-section {
    margin-top: 2rem;
    text-align: center;
  }

  .back-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #64748b;
    text-decoration: none;
    font-weight: 500;
    padding: 0.75rem 1.5rem;
    border-radius: 10px;
    border: 2px solid #e2e8f0;
    transition: all 0.2s;
  }

  .back-button:hover {
    border-color: #667eea;
    color: #667eea;
  }

  /* Mobile */
  @media (max-width: 767.98px) {
    .leaderboard-title {
      font-size: 1.5rem;
    }

    .your-rank-card {
      flex-direction: column;
      text-align: center;
    }

    .your-rank-stats {
      justify-content: center;
    }

    .podium {
      gap: 0.5rem;
    }

    .podium-item {
      max-width: 110px;
    }

    .podium-item.first .podium-avatar {
      width: 60px;
      height: 60px;
      font-size: 1.5rem;
    }

    .podium-avatar {
      width: 45px;
      height: 45px;
      font-size: 1.1rem;
    }

    .podium-name {
      font-size: 0.75rem;
    }

    .podium-points {
      font-size: 0.7rem;
    }

    .podium-stand {
      font-size: 1.1rem;
    }

    .podium-item.first .podium-stand { height: 60px; }
    .podium-item.second .podium-stand { height: 45px; }
    .podium-item.third .podium-stand { height: 35px; }

    .rankings-header {
      display: none;
    }

    .ranking-item {
      grid-template-columns: 40px 1fr auto;
      gap: 0.75rem;
      padding: 0.875rem 1rem;
    }

    .ranking-reward {
      display: none;
    }

    .ranking-avatar {
      width: 32px;
      height: 32px;
      font-size: 0.8rem;
    }

    .ranking-name {
      font-size: 0.9rem;
    }
  }
</style>

<div class="leaderboard-page">
  <!-- Header -->
  <div class="leaderboard-header">
    <h1 class="leaderboard-title">
      <span>&#127942;</span>
      Clasificacion
    </h1>
  </div>

  <!-- Your Rank -->
  <div class="your-rank-card">
    <div class="your-rank-info">
      <h3>Tu Posicion</h3>
      <div class="rank-value">#<%= currentUserRank %></div>
    </div>
    <div class="your-rank-stats">
      <div class="rank-stat">
        <div class="value"><%= currentUser.points %></div>
        <div class="label">Puntos</div>
      </div>
      <% const yourReward = getReward(currentUserRank); %>
      <% if (yourReward) { %>
      <div class="rank-stat">
        <div class="value">&#127873;</div>
        <div class="label"><%= yourReward.name %></div>
      </div>
      <% } %>
    </div>
  </div>

  <!-- Podium (Top 3) -->
  <% if (top3.length >= 3) { %>
  <div class="podium-section">
    <div class="podium">
      <!-- 2nd Place -->
      <div class="podium-item second">
        <div class="podium-avatar"><%= top3[1].username.charAt(0).toUpperCase() %></div>
        <div class="podium-name">
          <%= top3[1].username %>
          <% if (top3[1]._id.toString() === currentUser._id.toString()) { %><span class="you-badge">Tu</span><% } %>
        </div>
        <div class="podium-points"><%= top3[1].points %> pts</div>
        <div class="podium-stand">
          2
          <% const reward2 = getReward(2); %>
          <% if (reward2) { %><div class="podium-reward"><%= reward2.name %></div><% } %>
        </div>
      </div>

      <!-- 1st Place -->
      <div class="podium-item first">
        <div class="podium-avatar"><%= top3[0].username.charAt(0).toUpperCase() %></div>
        <div class="podium-name">
          <%= top3[0].username %>
          <% if (top3[0]._id.toString() === currentUser._id.toString()) { %><span class="you-badge">Tu</span><% } %>
        </div>
        <div class="podium-points"><%= top3[0].points %> pts</div>
        <div class="podium-stand">
          1
          <% const reward1 = getReward(1); %>
          <% if (reward1) { %><div class="podium-reward"><%= reward1.name %></div><% } %>
        </div>
      </div>

      <!-- 3rd Place -->
      <div class="podium-item third">
        <div class="podium-avatar"><%= top3[2].username.charAt(0).toUpperCase() %></div>
        <div class="podium-name">
          <%= top3[2].username %>
          <% if (top3[2]._id.toString() === currentUser._id.toString()) { %><span class="you-badge">Tu</span><% } %>
        </div>
        <div class="podium-points"><%= top3[2].points %> pts</div>
        <div class="podium-stand">
          3
          <% const reward3 = getReward(3); %>
          <% if (reward3) { %><div class="podium-reward"><%= reward3.name %></div><% } %>
        </div>
      </div>
    </div>
  </div>
  <% } %>

  <!-- Rest of Rankings -->
  <% if (rest.length > 0) { %>
  <div class="rankings-section">
    <div class="rankings-header">
      <div>Pos</div>
      <div>Usuario</div>
      <div>Puntos</div>
      <div>Recompensa</div>
    </div>
    <% rest.forEach((user, index) => { %>
      <% const pos = index + 4; %>
      <% const reward = getReward(pos); %>
      <div class="ranking-item <%= user._id.toString() === currentUser._id.toString() ? 'is-you' : '' %>">
        <div class="ranking-position">#<%= pos %></div>
        <div class="ranking-user">
          <div class="ranking-avatar"><%= user.username.charAt(0).toUpperCase() %></div>
          <div class="ranking-name">
            <%= user.username %>
            <% if (user._id.toString() === currentUser._id.toString()) { %><span class="you-badge">Tu</span><% } %>
          </div>
        </div>
        <div class="ranking-points"><%= user.points %></div>
        <div class="ranking-reward">
          <% if (reward) { %>
            <span class="reward-badge"><%= reward.name %></span>
          <% } else { %>
            <span class="no-reward">-</span>
          <% } %>
        </div>
      </div>
    <% }) %>
  </div>
  <% } %>

  <!-- Back -->
  <div class="back-section">
    <a href="/tester" class="back-button">
      &#8592; Volver al Panel
    </a>
  </div>
</div>
