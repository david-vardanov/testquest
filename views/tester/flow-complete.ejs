<% layout('layouts/boilerplate') %>

<style>
  .completion-wrapper {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
  }

  .completion-container {
    max-width: 600px;
    width: 100%;
  }

  /* Trophy Section */
  .trophy-section {
    text-align: center;
    margin-bottom: 2rem;
  }

  .trophy-circle {
    width: 120px;
    height: 120px;
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    box-shadow: 0 10px 40px rgba(16, 185, 129, 0.4);
    animation: trophy-bounce 1s ease-out;
  }

  .trophy-circle span {
    font-size: 3.5rem;
  }

  @keyframes trophy-bounce {
    0% { transform: scale(0) rotate(-20deg); opacity: 0; }
    50% { transform: scale(1.2) rotate(10deg); }
    70% { transform: scale(0.9) rotate(-5deg); }
    100% { transform: scale(1) rotate(0deg); opacity: 1; }
  }

  .completion-title {
    font-size: 2.25rem;
    font-weight: 800;
    color: #1a1a2e;
    margin-bottom: 0.5rem;
  }

  .completion-subtitle {
    font-size: 1.1rem;
    color: #64748b;
  }

  .flow-name {
    color: #667eea;
    font-weight: 600;
  }

  /* Bonus Card */
  .bonus-card {
    background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
    border-radius: 16px;
    padding: 1.5rem;
    margin-bottom: 2rem;
    text-align: center;
    color: white;
    box-shadow: 0 8px 30px rgba(251, 191, 36, 0.3);
    animation: bonus-pulse 2s ease-in-out infinite;
  }

  @keyframes bonus-pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.02); }
  }

  .bonus-icon {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .bonus-value {
    font-size: 2rem;
    font-weight: 800;
  }

  .bonus-label {
    font-size: 0.9rem;
    opacity: 0.9;
  }

  /* Stats */
  .stats-section {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .stat-card {
    background: white;
    border-radius: 12px;
    padding: 1.25rem;
    text-align: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1e293b;
  }

  .stat-label {
    font-size: 0.75rem;
    color: #64748b;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Next Flow Card */
  .next-flow-section {
    margin-bottom: 1.5rem;
  }

  .section-label {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #667eea;
    margin-bottom: 1rem;
    text-align: center;
  }

  .next-flow-card {
    background: white;
    border-radius: 16px;
    padding: 1.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border: 2px solid #667eea;
    position: relative;
    overflow: hidden;
  }

  .next-flow-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .next-flow-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .next-flow-icon {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .next-flow-info h3 {
    font-size: 1.1rem;
    font-weight: 700;
    color: #1e293b;
    margin: 0 0 0.25rem 0;
  }

  .next-flow-info p {
    font-size: 0.8rem;
    color: #64748b;
    margin: 0;
  }

  .next-flow-meta {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .meta-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    background: #f1f5f9;
    padding: 0.375rem 0.75rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
    color: #475569;
  }

  .meta-badge.points {
    background: #fef3c7;
    color: #92400e;
  }

  .next-flow-button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    width: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    font-size: 1rem;
    font-weight: 700;
    padding: 0.875rem 1.5rem;
    border-radius: 10px;
    text-decoration: none;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .next-flow-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.5);
    color: white;
  }

  /* CTA Section */
  .cta-section {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 10px;
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
  }

  .cta-button.primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .cta-button.primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    color: white;
  }

  .cta-button.secondary {
    background: white;
    color: #64748b;
    border: 2px solid #e2e8f0;
  }

  .cta-button.secondary:hover {
    border-color: #667eea;
    color: #667eea;
  }

  /* Confetti */
  .confetti {
    position: fixed;
    width: 10px;
    height: 10px;
    top: -10px;
    animation: confetti-fall 3s ease-out forwards;
    z-index: 1000;
    pointer-events: none;
  }

  @keyframes confetti-fall {
    0% { transform: translateY(0) rotate(0deg); opacity: 1; }
    100% { transform: translateY(100vh) rotate(720deg); opacity: 0; }
  }

  /* Mobile */
  @media (max-width: 767.98px) {
    .completion-title { font-size: 1.75rem; }
    .trophy-circle { width: 100px; height: 100px; }
    .trophy-circle span { font-size: 2.75rem; }
    .stats-section { grid-template-columns: repeat(3, 1fr); gap: 0.75rem; }
    .stat-card { padding: 1rem; }
    .stat-value { font-size: 1.25rem; }
    .cta-section { flex-direction: column; }
    .cta-button { width: 100%; justify-content: center; }
  }
</style>

<div class="completion-wrapper">
  <div class="completion-container">
    <!-- Trophy -->
    <div class="trophy-section">
      <div class="trophy-circle">
        <span>&#127881;</span>
      </div>
      <h1 class="completion-title">Flujo Completado!</h1>
      <p class="completion-subtitle">Completaste todas las pruebas en <span class="flow-name">"<%= flow.name %>"</span></p>
    </div>

    <!-- Bonus -->
    <% if (progress.bonusAwarded && flow.completionBonus) { %>
    <div class="bonus-card">
      <div class="bonus-icon">&#11088;</div>
      <div class="bonus-value">+<%= flow.completionBonus %> pts</div>
      <div class="bonus-label">Bonus por completar flujo</div>
    </div>
    <% } %>

    <!-- Stats -->
    <div class="stats-section">
      <div class="stat-card">
        <div class="stat-value"><%= flow.testCases ? flow.testCases.length : progress.completedTestCases.length %></div>
        <div class="stat-label">Pruebas</div>
      </div>
      <div class="stat-card">
        <div class="stat-value"><%= flow.points || '-' %></div>
        <div class="stat-label">Puntos Base</div>
      </div>
      <div class="stat-card">
        <div class="stat-value">&#9989;</div>
        <div class="stat-label">Completado</div>
      </div>
    </div>

    <!-- Next Flow -->
    <% if (nextFlow) { %>
    <div class="next-flow-section">
      <div class="section-label">Siguiente Mision</div>
      <div class="next-flow-card">
        <div class="next-flow-header">
          <div class="next-flow-icon">&#127919;</div>
          <div class="next-flow-info">
            <h3><%= nextFlow.name %></h3>
            <p><%= nextFlow.description || 'Completa este flujo para ganar mas puntos' %></p>
          </div>
        </div>
        <div class="next-flow-meta">
          <div class="meta-badge">&#128203; <%= nextFlow.testCases ? nextFlow.testCases.length : '?' %> pruebas</div>
          <div class="meta-badge points">&#9733; <%= nextFlow.points || 0 %> pts</div>
          <% if (nextFlow.completionBonus) { %>
          <div class="meta-badge points">&#127881; +<%= nextFlow.completionBonus %> bonus</div>
          <% } %>
        </div>
        <a href="/tester/flow/<%= nextFlow._id %>" class="next-flow-button">
          Comenzar Siguiente Flujo
          <span>&#8594;</span>
        </a>
      </div>
    </div>
    <% } %>

    <!-- CTAs -->
    <div class="cta-section">
      <% if (!nextFlow) { %>
      <a href="/tester" class="cta-button primary">
        &#127968; Volver al Panel
      </a>
      <% } else { %>
      <a href="/tester" class="cta-button secondary">
        &#127968; Ver Todos los Flujos
      </a>
      <% } %>
      <a href="/tester/leaderboard" class="cta-button secondary">
        &#127942; Ver Clasificacion
      </a>
    </div>
  </div>
</div>

<script>
  // Confetti effect
  (function() {
    const colors = ['#10b981', '#059669', '#fbbf24', '#667eea', '#764ba2', '#f59e0b'];
    const confettiCount = 50;

    for (let i = 0; i < confettiCount; i++) {
      setTimeout(() => {
        const confetti = document.createElement('div');
        confetti.className = 'confetti';
        confetti.style.left = Math.random() * 100 + 'vw';
        confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
        confetti.style.borderRadius = Math.random() > 0.5 ? '50%' : '0';
        confetti.style.animationDuration = (2 + Math.random() * 2) + 's';
        document.body.appendChild(confetti);

        setTimeout(() => confetti.remove(), 4000);
      }, i * 50);
    }
  })();
</script>
