<% layout('layouts/boilerplate') %>

<div class="text-center py-5">
  <h1 class="text-success">Flujo Completado!</h1>
  <p class="lead">Has completado todos los casos de prueba en "<%= flow.name %>"</p>

  <% if (progress.bonusAwarded) { %>
    <div class="alert alert-success d-inline-block">
      <strong>+<%= flow.completionBonus %> puntos de bonus otorgados!</strong>
    </div>
  <% } %>

  <div class="mt-4">
    <a href="/tester" class="btn btn-primary btn-lg">Volver a Flujos</a>
    <a href="/tester/leaderboard" class="btn btn-outline-primary btn-lg">Ver Clasificacion</a>
  </div>
</div>
