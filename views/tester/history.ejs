<% layout('layouts/boilerplate') %>

<h2>Historial de Temporadas</h2>
<p class="text-muted">Ve tus resultados de temporadas de prueba pasadas</p>

<% if (seasons.length > 0) { %>
  <div class="row">
    <% seasons.forEach(season => { %>
      <div class="col-md-6 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-start">
              <div>
                <h5 class="card-title mb-1"><%= season.name %></h5>
                <p class="text-muted mb-2" style="font-size: 0.85rem;">
                  Cerrada: <%= season.closedAt ? new Date(season.closedAt).toLocaleDateString() : 'N/A' %> |
                  <%= season.totalParticipants %> participantes
                </p>
              </div>
              <a href="/tester/history/<%= season._id %>" class="btn btn-outline-primary btn-sm">Ver</a>
            </div>

            <% if (season.userPosition) { %>
              <div class="mt-2 p-2 rounded" style="background: #f8f9fa;">
                <div class="d-flex justify-content-between">
                  <div>
                    <small class="text-muted">Tu Posicion</small>
                    <div class="fw-bold">#<%= season.userPosition %></div>
                  </div>
                  <div>
                    <small class="text-muted">Tus Puntos</small>
                    <div class="fw-bold"><%= season.userPoints %></div>
                  </div>
                  <div>
                    <small class="text-muted">Recompensa</small>
                    <div>
                      <% if (season.userReward) { %>
                        <span class="badge bg-success"><%= season.userReward.prizeDescription || season.userReward.name %></span>
                      <% } else { %>
                        <span class="text-muted">-</span>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>
            <% } else { %>
              <div class="text-muted mt-2" style="font-size: 0.85rem;">
                No participaste en esta temporada
              </div>
            <% } %>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
<% } else { %>
  <div class="alert alert-info">
    Aun no hay temporadas pasadas. Sigue probando para participar en la temporada actual!
  </div>
<% } %>
