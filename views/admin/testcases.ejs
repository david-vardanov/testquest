<% layout('layouts/boilerplate') %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Manage Test Cases</h2>
  <a href="/admin/testcases/new" class="btn btn-primary">Add Test Case</a>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Points</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% testCases.forEach(tc => { %>
      <tr>
        <td><%= tc.title %></td>
        <td><%= tc.points %></td>
        <td><%= tc.isActive ? 'Active' : 'Inactive' %></td>
        <td>
          <a href="/admin/testcases/<%= tc._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
          <form method="POST" action="/admin/testcases/<%= tc._id %>/delete" class="d-inline">
            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete?')">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
