<% layout('layouts/boilerplate') %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Manage Testers</h2>
  <a href="/admin/users/new" class="btn btn-primary">Add Tester</a>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Points</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.points %></td>
        <td><%= user.isActive ? 'Active' : 'Inactive' %></td>
        <td>
          <a href="/admin/users/<%= user._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
          <form method="POST" action="/admin/users/<%= user._id %>/delete" class="d-inline">
            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this user?')">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
