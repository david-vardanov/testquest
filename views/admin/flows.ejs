<% layout('layouts/boilerplate') %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Manage Flows</h2>
  <a href="/admin/flows/new" class="btn btn-primary">Add Flow</a>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Test Cases</th>
      <th>Points</th>
      <th>Completion Bonus</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% flows.forEach(flow => { %>
      <tr>
        <td><%= flow.name %></td>
        <td><%= flow.testCases.length %> cases</td>
        <td><%= flow.points || 0 %> pts</td>
        <td>+<%= flow.completionBonus %> pts</td>
        <td><%= flow.isActive ? 'Active' : 'Inactive' %></td>
        <td>
          <a href="/admin/flows/<%= flow._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
          <form method="POST" action="/admin/flows/<%= flow._id %>/delete" class="d-inline">
            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete?')">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
