<% layout('layouts/boilerplate') %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Niveles de Recompensa</h2>
  <a href="/admin/rewards/new" class="btn btn-primary btn-sm">Agregar Nivel de Recompensa</a>
</div>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Posicion</th>
      <th>Nombre</th>
      <th>Premio</th>
      <th>Monto</th>
      <th>Estado</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% rewards.forEach(reward => { %>
      <tr>
        <td>#<%= reward.positionFrom %><%= reward.positionTo > reward.positionFrom ? '-' + reward.positionTo : '' %></td>
        <td><%= reward.name %></td>
        <td><%= reward.prizeDescription || '-' %></td>
        <td><%= reward.prizeAmount ? '$' + reward.prizeAmount : '-' %></td>
        <td><%= reward.isActive ? 'Activo' : 'Inactivo' %></td>
        <td>
          <a href="/admin/rewards/<%= reward._id %>/edit" class="btn btn-sm btn-outline-secondary">Editar</a>
          <form method="POST" action="/admin/rewards/<%= reward._id %>/delete" class="d-inline">
            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Eliminar?')">Eliminar</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<% if (rewards.length === 0) { %>
  <div class="text-center py-4 text-muted">Aun no hay niveles de recompensa. Agrega uno para comenzar.</div>
<% } %>
