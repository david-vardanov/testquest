<% layout('layouts/boilerplate') %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Reward Tiers</h2>
  <a href="/admin/rewards/new" class="btn btn-primary btn-sm">Add Reward Tier</a>
</div>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Position</th>
      <th>Name</th>
      <th>Prize</th>
      <th>Amount</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% rewards.forEach(reward => { %>
      <tr>
        <td>#<%= reward.positionFrom %><%= reward.positionTo > reward.positionFrom ? '-' + reward.positionTo : '' %></td>
        <td><%= reward.name %></td>
        <td><%= reward.prizeDescription || '-' %></td>
        <td><%= reward.prizeAmount ? '$' + reward.prizeAmount : '-' %></td>
        <td><%= reward.isActive ? 'Active' : 'Inactive' %></td>
        <td>
          <a href="/admin/rewards/<%= reward._id %>/edit" class="btn btn-sm btn-outline-secondary">Edit</a>
          <form method="POST" action="/admin/rewards/<%= reward._id %>/delete" class="d-inline">
            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete?')">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<% if (rewards.length === 0) { %>
  <div class="text-center py-4 text-muted">No reward tiers yet. Add one to get started.</div>
<% } %>
