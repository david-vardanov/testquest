                <input type="hidden" name="testCases[<%= index %>][isReused]" value="false">
                <div class="mb-3">
                  <label class="form-label">Title</label>
                  <input type="text" name="testCases[<%= index %>][title]" class="form-control case-title-input" value="<%= tc.title %>" required placeholder="e.g., User Registration / Login">
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="mb-3">
                      <label class="form-label">Objective</label>
                      <textarea name="testCases[<%= index %>][description]" class="form-control" rows="3" required placeholder="What should this test verify?"><%= tc.description %></textarea>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="mb-3">
                      <label class="form-label">Expected Result</label>
                      <textarea name="testCases[<%= index %>][expectedResult]" class="form-control" rows="3" required placeholder="What should happen when the test passes?"><%= tc.expectedResult %></textarea>
                    </div>
                  </div>
                </div>
                <div class="mb-3">
                  <label class="form-label">Steps</label>
                  <textarea name="testCases[<%= index %>][scenario]" class="form-control" rows="5" required placeholder="1. Launch app&#10;2. Navigate to...&#10;3. Verify that..."><%= tc.scenario %></textarea>
